<UserControl x:Class="k2vr_installer_gui.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:k2vr_installer_gui.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{StaticResource brush_background}">

    <StackPanel Height="461">
        <Image x:Name="image" Height="409" Source="cover.png" StretchDirection="DownOnly" Stretch="UniformToFill"/>
        <Button Style="{StaticResource Button_Primary}"  HorizontalAlignment="Right" Content="Begin Installation" Click="Button_Click" Margin="0,7,8,0" VerticalAlignment="Center" FontSize="16" Height="38" Padding="16,1"/>
    </StackPanel>
</UserControl>
