<UserControl x:Class="k2vr_installer_gui.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:k2vr_installer_gui.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{StaticResource brush_background}">

    <StackPanel>
        <TextBlock Style="{StaticResource Heading}" Margin="0,10,0,0" Text="Welcome to the social" />
        <Border Style="{StaticResource Element_Border}">
            <ItemsControl x:Name="ItemsControl_status">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="{StaticResource brush_foreground}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
        <Button Style="{StaticResource Button_Primary}" Margin="0,5,0,0" HorizontalAlignment="Center" Content="Start Installation" Click="Button_Click"/>
    </StackPanel>
</UserControl>
